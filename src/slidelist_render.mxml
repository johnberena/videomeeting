<!-- http://blog.flexexamples.com/2008/02/15/creating-a-simple-image-gallery-with-the-flex-horizontallist-control/ -->
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		verticalAlign="top"
		horizontalAlign="center"
		paddingLeft="0" paddingRight="0" paddingBottom="0" paddingTop="0"
		borderStyle="solid" verticalScrollPolicy="off" horizontalScrollPolicy="off">

	<mx:Image source="{data.thumb}" width="100%" height="90" horizontalAlign="center" />
	<mx:Text text="{data.title}" width="100%" paddingTop="0" paddingBottom="0" />
	
</mx:VBox>
